{
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": "記事の投稿"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "title": {
      "default": "",
      "type": "text"
    },
    "subtitle": {
      "default": "",
      "type": "text"
    },
    "article": {
      "default": "",
      "type": "text",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    }
  }
}